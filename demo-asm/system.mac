; [fold]  [
; Jump to a 32-bit segment
;
; Registers modified:
;   eax

        macro   jmp32 selector,label
        push    selector
        push    offset label
        db      OPERAND_SIZE            ; Use a 32-bit offset
        retf
        endm
; [fold]  ]

