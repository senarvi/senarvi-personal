; [fold]  [
; Align code

        macro   aligncode
        local   @@alignstart,@@alignend
        masm
        locals

        ; Would it be wice to jump over alignment
@@alignstart:
        if      offset @@alignend - offset @@alignstart gt 2
        jmp     @@alignend
        endif
        align   32                      ; 16 bytes for 486
@@alignend:

        ideal
        endm
; [fold]  ]

