; [fold]  [
; Read a byte from the DSP
;
; In:
;   dx - 2xEh
;
; Out:
;   al - byte
;
; Registers modified:
;   al dl

        macro   readdsp
        local   @@busy
@@busy:
        in      al,dx
        or      al,al
        jns     @@busy

        sub     dl,4
        in      al,dx
        endm
; [fold]  ]

