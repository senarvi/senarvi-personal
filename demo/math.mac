; [fold]  [
; Change fractional part size

        macro   chgfrac src,orgfrac,newfrac
        if      newfrac gt orgfrac
        sal     src,newfrac-orgfrac
        elseif  newfrac lt orgfrac
        sar     src,orgfrac-newfrac
        endif
        endm
; [fold]  ]

