; [fold]  [
        macro   getcursorpos
        pushad

        mov     eax,DPMI_RMINT
        mov     ebx,BIOS_VIDEOINT
        mov     edi,offset rmregs
        mov     [rmregs.ah],BIOS_GETCURSORPOS
        mov     [rmregs.bh],0
        xor     ecx,ecx
        int     DPMI_INT
        xor     eax,eax
        mov     al,[rmregs.dl]
        mov     [text_cursor.x],eax
        mov     al,[rmregs.dh]
        mov     [text_cursor.y],eax

        popad
        endm
; [fold]  ]

