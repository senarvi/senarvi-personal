; [fold]  [
        macro   setcursorpos
        pushad

        mov     eax,DPMI_RMINT
        mov     ebx,BIOS_VIDEOINT
        mov     edi,offset rmregs
        mov     [rmregs.ah],BIOS_SETCURSORPOS
        mov     [rmregs.bh],0
        mov     edx,[text_cursor.x]
        mov     [rmregs.dl],dl
        mov     edx,[text_cursor.y]
        mov     [rmregs.dh],dl
        xor     ecx,ecx
        int     DPMI_INT

        popad
        endm
; [fold]  ]

